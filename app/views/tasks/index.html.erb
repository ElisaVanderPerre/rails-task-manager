<h1>My tasks</h1>
<%@tasks.each do |task|%>
  <%if task.completed%>
    <i class="far fa-check-square"></i>
  <%else%>
    <i class="far fa-square"></i>
  <%end%>
  <%=link_to task.title, task_path(task)%> Â·
  <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %><br>
<%end%>
<div class="border-top py-2 my-5">
  <%=link_to "+ Add a new task", new_task_path%>
</div>



