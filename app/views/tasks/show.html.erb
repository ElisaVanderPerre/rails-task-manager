<div class="d-flex justify-content-between align-items-baseline">
  <h1><%=@task.title%></h1>
  <%=link_to "Edit this task", edit_task_path, class: "btn btn-primary"%>
</div>


<div class="card pt-3 pl-3 bg-light">
  <p><%=@task.details%></p>
</div>

<div class="my-5 border-bottom">
  <%if @task.completed%>
    <i class="far fa-check-square"></i>
  <%else%>
    <i class="far fa-square"></i>
  <%end%>
   This task is completed
</div>

<%=link_to "<i class='fas fa-undo-alt'></i>".html_safe + " Back to list", tasks_path%>

